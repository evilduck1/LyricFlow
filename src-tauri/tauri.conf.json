{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LyricFlow",
  "version": "2.2.21",
  "identifier": "com.seanengland.lyricflow",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "LyricFlow",
        "width": 1100,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1000,
        "minHeight": 680,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
